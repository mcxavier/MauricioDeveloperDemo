{
    "compilerOptions": {
        "removeComments": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "rootDir": "src"
    },
    "include": [
        "src/**/*"
    ]
}
